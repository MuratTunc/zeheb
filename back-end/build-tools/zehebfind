server {
    listen 80;
    server_name zehebfind.com www.zehebfind.com;

    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri /index.html;
    }

    location /user/ {
        proxy_pass http://127.0.0.1:8080/; # Accessing user-service running on the same server
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /mail/ {
        proxy_pass http://127.0.0.1:8081/; # Accessing mail-service running on the same server
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
